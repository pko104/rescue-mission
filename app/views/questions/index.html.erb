<h1>Hello, questions!</h1>
<li>
  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
</li>
<% if flash.any? %>
  <div class="flash">
    <div class="container">
      <li>
        <%= flash[:notice]%>
      </li>
        <br>
    </div>
  </div>
<%end%>

<div>
  <br>
    <%= link_to "SUBMIT YOURS NEEOOWW", new_question_path%>
  <br>
  </br>
</div>
<%if @questions%>
  <% @questions.each do |q| %>
    <div class = "field">
      <%= "Question: " %>
        <%= link_to q.name, question_path(q) %>
    </div>
    <div>
      <%= "Description: " %>
      <li>
        <%= q.description %>
      </li>
      <%= "Submitted By: " %>
      <li>
        <%= q.user.email %>
      </li>
    </div>
    <br>
      <%if current_user.id == q.user.id%>
        <%= form_for q, method: :delete do |f| %>
          <%= f.submit "Delete Question" %>
        <%end%>
      <%end%>
    </br>
  <%end%>
<%end%>
